<h1>Sign Up</h1>
<h3>Come <em>Get Lost</em> with us!</h3>
<% console %>
<% if @signup.errors.messages %>
  <ul>
  <% @signup.errors.full_messages.each do |m| %>
    <li><%= m %></li>
  <% end %>
  </ul>
<% end %>
<%= form_for @user, url: validate_info_user_path do |f| %>
  <%= f.label :first_name, "First Name:" %>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :last_name, "Last Name:" %>
  <%= f.text_field :last_name %>
  <br>
  <%= f.label :email, "Email:" %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :address, "Address:" %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :city, "City:" %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :zipcode, "Zip:" %>
  <%= f.number_field :zipcode %>
  <br>
  <%= f.label :state, "State:" %>
  <%= f.text_field :state %>
  <br>
  <%= f.submit "Continue" %>
<% end %>
<%= link_to "Already Experienced? Please sign in!", login_path %>
