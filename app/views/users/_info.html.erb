<div class="ui form">
<%= form_for current_user do |f| %>
  <div class="fields">
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="eight wide field">
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email %>
  </div>
  <div class="eight wide field">
    <%= f.label :address, "Address:" %>
    <%= f.text_field :address %>
  </div>
  <div class="fields">
    <div class="three wide field">
      <%= f.label :city, "City:" %>
      <%= f.text_field :city %>
    </div>
    <div class="three wide field">
      <%= f.label :zipcode, "Zip:" %>
      <%= f.number_field :zipcode %>
    </div>
    <div class="two wide field">
      <%= f.label :state, "State:" %>
      <%= f.text_field :state %>
    </div>
  </div>
  <%= f.submit "Update Information", class: 'ui primary button' %>
<% end %>
</div>
