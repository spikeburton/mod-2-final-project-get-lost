<h1><%= @adventure.location %></h1>
<p><strong>Topography</strong>: <%= @adventure.topography %></p>
<% if current_user.adventures.exclude? @adventure %>
  <%= form_for @adventure, method: :post, url: add_adventure_path do |f| %>
    <%= f.submit "Add Adventure" %>
  <% end %>
<% end %>
<% if flash.alert %>
  <div>
    <p><%= flash.alert %></p>
  </div>
<% end %>
<br>
<%= link_to "Back to Adventures", adventures_path %>
<%= link_to "Return to my account", user_path(current_user) %>
